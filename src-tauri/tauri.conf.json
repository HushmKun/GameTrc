{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GameTrc",
  "version": "1.0.0",
  "identifier": "me.hushm.gametrc",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GameTrc",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
      "enable": true,
      "scope": [
        "$APPDATA/**",
        "$PICTURE/**",
        "$DOWNLOAD/**",
        "$DESKTOP/**",
        "$HOME/**/*.png",
        "$HOME/**/*.jpg",
        "$HOME/**/*.jpeg",
        "$HOME/**/*.webp",
        "$HOME/**/*.gif"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}